<%= form_with(model: page, class: "contents") do |form| %>
  <% if page.errors.any? %>
  <div id="error_explanation" class="bg-red-100 rounded-md p-4 mb-4">
    <% page.errors.each do |error| %>
      <%= content_tag :div, class: build_alert_classes(:danger) do%>
        <button><span>&times;</span></button>
        <%= error.full_message %>
      <% end %>
    <% end %>
  <% end %>

   <div class="my-5">
    <%= form.label :picture %>
    <%= form.file_field :avatar, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :about %>
    <%= form.text_area :about, rows: 4, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
