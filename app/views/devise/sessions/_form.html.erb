<%= form_with(model: resource, url: session_path(resource_name), data: { turbo: false }) do |f| %> 
  <% if flash.any? %>
    <div id="error_explanation" class="bg-red-100 rounded-md p-4 mb-4">
     <%= render 'shared/flash' %>
  <% end %>
  <div class="mb-4">    
    <%= f.email_field :email, placeholder: :Email, autofocus: true, autocomplete: "email", class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <div class="mb-4">
    <%= f.password_field :password, placeholder: :Password, class: "border border-gray-300 rounded-sm w-full" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

   <div class="flex items-center">
    <%= f.submit "Log in", class: "cursor-pointer inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 mr-4" %>
    <% if !current_user %>
      <%= link_to 'Cancel', root_path %>
    <% end %>
  </div>
<% end %>

