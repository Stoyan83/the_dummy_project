<div class="h-full "> 
  <div class="border-b-2 block md:flex rounded  shadow p-6 ">
    <div class="w-full md:w-2/5 p-4 sm:p-6 lg:p-8 bg-white shadow-md">
     <%= link_to "Back", :back, class: "bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded" %>

     <a href="#" class="-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800 m-25 ">Edit</a>        
     
     <div class="flex justify-between">
      
        <span class="text-xl font-semibold block pt-10">Admin Profile</span>
        
      </div>
      
      <span class="text-gray-600">This information is secret so be careful</span>
      <div class="w-full p-8 mx-2 flex justify-center">
        <img id="showImage" class="max-w-xs w-32 items-center border" src="https://images.unsplash.com/photo-1477118476589-bff2c5c4cfbb?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=200&q=200" alt="">   
        </div>                
   </div> 

  <div class="w-full md:w-3/5 p-8 bg-white lg:ml-4 shadow-md">

  <div class="pb-6">
    <span class="text-gray-600 block opacity-70">Personal login information of your account</span>
  </div>

<%= form_with(model: resource, url: registration_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %> 
  <% if resource.errors.any? %>
    <div id="error_explanation" class="bg-red-100 rounded-md p-4 mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>
  <% end %>
    <div class="pb-6">
    </div>         
    <label for="name" class="font-semibold text-gray-700 block pb-1">Username</label>          
    <div class="flex">
     <%= f.text_field :username, class: "border-1  rounded-r px-4 py-2 w-full", autofocus: true, autocomplete: "on" %>
    </div>


    <div class="pb-6">
    <label for="name" class="font-semibold text-gray-700 block pb-1">Email</label>
    
    <div class="flex">
    <%= f.email_field :email, class: "border-1  rounded-r px-4 py-2 w-full", autofocus: true, autocomplete: "on" %>
    </div>  

    <div class="pb-6">
      <label for="name" class="font-semibold text-gray-700 block pb-1">Password</label>    
    <div class="flex">
      <%= f.password_field :password, class: "border-1  rounded-r px-4 py-2 w-full", placeholder: "**********" %>
    </div>

    <div class="pb-6">
      <label for="name" class="font-semibold text-gray-700 block pb-1">Confirm password</label>    
    <div class="flex">
      <%= f.password_field :password_confirmation, class: "border-1  rounded-r px-4 py-2 w-full", placeholder: "**********" %>
    </div>

     <div class="pb-6">
      <label for="name" class="font-semibold text-gray-700 block pb-1">Current password</label>    
    <div class="flex">
      <%= f.password_field :current_password, class: "border-1  rounded-r px-4 py-2 w-full", placeholder: "**********" %>
    </div> 
        <div class="pb-6">
          
          </div>    
     <div class="pb-6">
      <%= f.submit "Update", class: "-mt-2 text-md font-bold text-white bg-gray-700 rounded-full px-5 py-2 hover:bg-gray-800" %>
    </div>
      <div class="pb-6">
          </div>
            <div class="pb-6">
          <div class="flex">
          </div>
            <div class="pb-6">
          </div>
            <div class="pb-6">
          </div>
            <div class="pb-6">
         
          </div>
            <div class="pb-6">
          
          </div>
                        
        </div>
      </div>
    </div>
  </div>
<div class="pb-6">          
<% end %>


<div class="pb-6">   
<%= button_to "Cancel my account", registration_path(resource_name), :method => :delete, onclick: "return confirmDestroy('Are you sure want cancel your account?')", class: "h-10 px-5 m-2 text-red-100 transition-colors duration-150 bg-red-700 rounded-lg focus:shadow-outline hover:bg-red-800" %>
</div> 

