<%= form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>   
  <% if resource.errors.any? %>
    <div id="error_explanation" class="bg-red-100 rounded-md p-4 mb-4">
      <%= render "devise/shared/error_messages", resource: resource %>
  <% end %>
  
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg max-h-20">
    <h3 class="text-2xl font-bold text-center">Forgot your password?</h3>
      <form action="">
        <div class="mt-4">
            <div>
              <label class="block" for="email">Email<label>

                <%= f.text_field :email, placeholder: :Email, autofocus: true, autocomplete: "on",
                    class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
            </div>
            <div class="flex items-baseline justify-between">
                    <button class="px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900">Reset</button>                 
                     <%= link_to 'Cancel', root_path, class: "inline-block rounded-lg px-4 py-2 border-2 border-blue-600 text-blue-600 font-medium text-xs leading-tight uppercase rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out" %>               
                   </div>  
                     <p class="text-sm text-blue-600 hover:underline">
                   
                        <%= link_to "Don't have an account yet? Sign up", new_user_registration_path, data: { turbo_frame: 'modal' }, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
                    </p>
                
    </div>
  </div>
<% end %>

