<% if resource.errors.any? %>
  <div id="error_explanation" class="error g-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
    <% resource.errors.full_messages.each do |message| %>
  <div>
     <button><span>&times;</span></button>
    <%= message %>
  </div>
  <% end %>
  </div>
<% end %>

